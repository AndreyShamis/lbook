{% extends 'lbook/default/index.html.twig' %}

{% block title %}LogBookBuild index{% endblock %}

{% block content %}
    <h1>LogBookBuild index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for log_book_build in log_book_builds %}
            <tr>
                <td>{{ log_book_build.id }}</td>
                <td>{{ log_book_build.name }}</td>
                <td>
                    <a href="{{ path('log_book_build_show', {'id': log_book_build.id}) }}">show</a>
