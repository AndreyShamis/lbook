{% extends 'lbook/default/index.html.twig' %}
{% block title %}LBOOK Cycles list{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-xs-10">
            <h1 class="generic_title">Cycle list</h1>
        </div>

        <div class="col-xs-2">
            <span style="float: right;">
                Count : {{ size }}
                <i class="fa fa-flag blue bigger-130"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </span>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            {% include "lbook/search.html.twig" %}
        </div>
    </div>

    {% set pagePath = "cycle_index" %}
    {% include "lbook/paginator.html.twig" %}
    <div id="cycleIndexToolbar">
    </div>
    <table class="records_list table table-striped table-condensed table-hover" data-classes="table table-no-bordered" id="setupCycleList"
           data-pagination="true" data-search="true" data-toggle="table"
           data-show-columns="true"
            {#data-detail-view="true"#}
            {#data-detail-formatter="detailFormatter"#}
            {#data-show-refresh="true" data-show-toggle="true" data-show-fullscreen="true"#}
           data-toolbar="#cycleIndexToolbar"
           data-page-size="100" data-page-list="[20, 50, 100, 'ALL']" data-sort-order="desc">
        <thead>
        <tr>
            <th data-sortable="true" title="Updated image" class="time_diff_icon" data-switchable="false"></th>
            <th data-sortable="true" data-switchable="false" title="Cycle ID">ID</th>
            <th data-sorter="htmlSorter" data-sortable="true" title="Full setup name" data-switchable="false" data-title="Cycle Name">Cycle Name</th>
            <th data-sorter="htmlSorter" data-sortable="true" title="Setup Name">Setup</th>
            <th data-sortable="true" title="Tests count in the cycle">Tests</th>
            <th data-sorter="dataPercentSorter" data-sortable="true" title="Pass Rate">PR</th>
            <th data-sortable="true" data-sorter="htmlSorter" title="Build Name">Build</th>
            <th data-sortable="true" data-visible="false" title="Controller">Controller</th>
            <th data-sortable="true" data-visible="false" title="Device Under Tests">DUT</th>
            <th data-sortable="true" title="Cycle Uploader Machine">Uploader</th>
            <th data-sorter="dataTitleIntSorter" data-sortable="true" title="Time duration between First test start-time and Last test end-time">Duration</th>
            <th data-sorter="dataTitleIntSorter" data-sortable="true">Test time</th>
            <th data-sorter="dataTitleDateSorter" data-sortable="true" title="Created time" data-visible="false">Created</th>
            <th data-sorter="dataTitleDateSorter" data-sortable="true" title="Update time">Updated</th>
            <th class="setup_cycle_options_column" data-switchable="false">Options</th>
        </tr>
        </thead>
        <tbody class="searchable">
        {% set break = false %}
        {% set counter = 0 %}
        {% for cycle in iterator if not break %}
        {% if counter == 10000 %}
            {% set break = true %}
        {% endif %}
        {% set counter = counter+1 %}
            <tr>
                <td>
                    {%  if date(cycle.updatedAt) > date('-30minutes') %}
                    <i class="normal-icon ace-icon fa fa-clock-o pink bigger-130"></i>
                    {% endif %}
                </td>
                <td>{{ cycle.id }}</td>
                <td title="{{ cycle.name }}"><a href="{{ path('cycle_show_first', { 'id': cycle.id }) }}">{{ shortString(cycle.name, 35, "...") }}</a></td>
                <td title="{{ cycle.setup }}"><a href="{{ path('setup_show_first', { 'id': cycle.setup.id  }) }}">{{ shortString(cycle.setup, 35, "...") }}</a></td>
                <td>{{ cycle.testsCount }}</td>
                {#<td>{{ cycle.tests | length }}</td>#}
                <td><span class="{{ passRateToColor(cycle.passRate) }}" data-percent="{{ cycle.passRate }}">{{ cycle.passRate }}%</span></td>
                <td title="{{ cycle.build }}">{% if cycle.build.id is defined %}<a href="{{ path('build_show_cycles_first', { 'id': cycle.build.id }) }}">{{ shortString(cycle.build, 35, "...") }}</a>{% endif %}</td>
                <td>{{ cycle.controller }}</td>
                <td>{{ cycle.dut }}</td>
                <td>{{ cycle.targetUploader }}</td>
                <td><span data-title="{{ cycle.period}}">{{ cycle.period |  executionTimeGenericShort}}</span></td>
                <td><span data-title="{{ cycle.testsTimeSum}}">{{ cycle.testsTimeSum |  executionTimeGenericShort}}</span></td>
                <td>
                    <span data-title="{{ cycle.createdAt|date('ymdHis') }}" title="Created [{{ cycle.createdAt |date('d/m/Y H:i:s') }}]">
                        {{ cycle.createdAt|time_diff}}
                    </span>
                </td>
                <td>
                    <span data-title="{{ cycle.updatedAt|date('ymdHis') }}" title="Updated [{{ cycle.updatedAt |date('d/m/Y H:i:s') }}]">
                        {{ cycle.updatedAt|time_diff}}
                    </span>
                </td>
                <td>
                    <a href="{{ path('cycle_show_first', { 'id': cycle.id }) }}">show</a>
                    {% if is_granted('edit', cycle.setup) %}
                        <a href="{{ path('cycle_edit', { 'id': cycle.id }) }}">edit</a>
                    {% endif %}

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cycle_new') }}">Create a new Cycle</a>
        </li>
    </ul>

    <script>
        $(document).ready(function() {
            $( "#cycleIndexToolbar, button[name = 'refresh'].btn" ).bind( "click", function() {
                location.reload();
            });
        });
    </script>
{% endblock %}
