{% extends 'lbook/default/index.html.twig' %}
{% block title %}Suite Info{% endblock %}
{% block content %}
    <h1>LogBookSuiteInfo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ log_book_suite_info.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ log_book_suite_info.name }}</td>
            </tr>
            <tr>
                <th>Uuid</th>
                <td>{{ log_book_suite_info.uuid }}</td>
            </tr>
            <tr>
                <th>Tests Count</th>
                <td>{{ log_book_suite_info.testsCount }}</td>
            </tr>
            <tr>
                <th>Assignee</th>
                <td>{{ log_book_suite_info.assignee | join(';') }}</td>
            </tr>
            <tr>
                <th>Testing Level</th>
                <td>{{ log_book_suite_info.testingLevel }}</td>
            </tr>
            <tr>
                <th>Setup Config</th>
                <td>{{ log_book_suite_info.setupConfig }}</td>
            </tr>
            <tr>
                <th>Stop_on_fail</th>
                <td>{{ log_book_suite_info.stopOnFail ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Stop_on_error</th>
                <td>{{ log_book_suite_info.stopOnError ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Suite_timeout</th>
                <td>{{ log_book_suite_info.suiteTimeout }}</td>
            </tr>
            <tr>
                <th>Hours_to_run</th>
                <td>{{ log_book_suite_info.hoursToRun }}</td>
            </tr>
            <tr>
                <th>Test_timeout</th>
                <td>{{ log_book_suite_info.testTimeout }}</td>
            </tr>
            <tr>
                <th>Labels</th>
                <td>{{ log_book_suite_info.labels | join(';') }}</td>
            </tr>
            <tr>
                <th>Supported_farms</th>
                <td>{{ log_book_suite_info.supportedFarms | join(';') }}</td>
            </tr>
            <tr>
                <th>LastSeen</th>
                <td>{{ log_book_suite_info.lastSeen ? log_book_suite_info.lastSeen|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreationCount</th>
                <td>{{ log_book_suite_info.creationCount }}</td>
            </tr>
            <tr>
                <th>SuiteMode</th>
                <td>{{ log_book_suite_info.suiteMode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('log_book_suite_info_index') }}">back to list</a>

