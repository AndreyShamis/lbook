{% extends 'lbook/default/index.html.twig' %}

{% block content %}
    <h1>Log</h1>

    <table class="records_list table table-striped table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ log.id }}</td>
            </tr>
            <tr>
                <th>Order</th>
                <td>{{ log.chain }}</td>
            </tr>
            <tr>
                <th>Log</th>
                <td>{{ log.message }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('log_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('log_edit', { 'id': log.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
