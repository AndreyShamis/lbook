{% extends 'lbook/default/index.html.twig' %}
{% block title %}LBOOK Setup list{% endblock %}
{% block content %}
    <h1>Setup list</h1>
    <div>Count : {{ size }}</div>
    {% include "lbook/search.html.twig" %}
    {% set pagePath = "setup_index" %}
    {% include "lbook/paginator.html.twig" %}
    <table class="records_list table table-striped table-condensed table-hover">
        <thead>
        <tr>
            <th title="Updated image"> </th>
            <th>ID</th>
            <th title="Full setup name">Name</th>
            <th title="Cycles found">Cycles</th>
            <th title="Friendly short setup name">Short Name</th>
            <th>OS</th>
            <th title="Owner Name">Owner</th>
            <th>Updated</th>
            <th title="Check Uptime">UPT</th>
            <th title="Moderators cound">Moderators</th>
            <th title="Shows if the setup is disabled">Disabled</th>
            <th>Options</th>
        </tr>
        </thead>
        <tbody class="searchable">
        {% set break = false %}
        {% set counter = 0 %}
        {% for setup in iterator if not break %}
        {% if counter == 10000 %}
            {% set break = true %}
        {% endif %}
        {% set counter = counter+1 %}
            <tr>
                <td>
                    {%  if date(setup.updatedAt) > date('-60minutes') %}
                        <i class="normal-icon ace-icon fa fa-clock-o pink bigger-130" title="Updated {{ setup.updatedAt|time_diff }}"></i>
                    {% endif %}
                </td>
                <td><a href="{{ path('setup_show_first', { 'id': setup.id }) }}">{{ setup.id }}</a></td>
                <td><a href="{{ path('setup_show_first', { 'id': setup.id }) }}">{{ setup.name }}</a></td>
                <td>{{ setup.cycles | length }}</td>
                <td>{{ setup.nameShown }}</td>
                <td>{{ setup.osStr }}</td>
                <td>{{ setup.owner }}</td>
                <td><span title="Updated {{ setup.updatedAt|date('d/m/Y H:i:s') }}"></span>{{ setup.updatedAt|time_diff}}</td>
                <td>{{ setup.checkUpTime ? 'Yes':'No' }}</td>
                <td>{{ setup.moderators|length }}</td>
                <td>{{ setup.disabled ? 'Yes':'False' }}</td>
                <td>
                    <div class="hidden-sm hidden-xs action-buttons">
                        <a class="blue" href="{{ path('setup_show', { 'id': setup.id }) }}" title="Show">
                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                        </a>
                        {% if is_granted('edit', setup) %}
                        <a class="green" href="{{ path('setup_edit', { 'id': setup.id }) }}" title="Edit">
                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                        </a>
                        {% endif %}
                        {#<a class="red" href="#" title="Delete">#}
                            {#<i class="ace-icon fa fa-trash-o bigger-130"></i>#}
                        {#</a>#}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('setup_new') }}">Create a new setup</a>
        </li>
    </ul>
{% endblock %}
